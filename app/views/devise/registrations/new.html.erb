<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }, remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label><%= f.radio_button :role, "teacher", checked: true, id:"teacher", onclick: "entryChange1();" %> teacher &emsp;</label>
        <label><%= f.radio_button :role, "student", onclick: "entryChange1();" %> student &emsp;</label>
        <label><%= f.radio_button :role, "Administrator",onclick: "entryChange1();" %> admin </label>
      </div>
      <div id="studentBox">
        <div class="form-group">
          <%= f.label :card_no %>
          <%= f.text_field :card_no, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div id="teacherBox">
        <div class="form-group">
          <!--<%= f.label :name %>-->
          <!--<%= f.text_field :name, autofocus: true, class: "form-control" %>-->
        </div>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
<script type="text/javascript">
	function entryChange1(){
		radio = document.getElementsByName("user[role]") 
		if(radio[0].checked) {
			document.getElementById('studentBox').style.display = "none";
			document.getElementById('teacherBox').style.display = "";
		} else if(radio[1].checked) {
			document.getElementById('studentBox').style.display = "";
			document.getElementById('teacherBox').style.display = "none";
		} else if(radio[2].checked) {
		  document.getElementById('studentBox').style.display = "";
			document.getElementById('teacherBox').style.display = "";
		}
	}
	window.onload = entryChange1;
</script>
