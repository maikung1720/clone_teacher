<h1>Rental Details</h1>

<table class="table table-bordered">
  <tbody>
    <% if !@rental.User.nil? %>
    <tr>
    <td width="100", class="info">Name</td> <td><%= @rental.User.name %></td>
    </tr>
    <tr>
    <td width="100", class="info">Number</td> <td><%= @rental.User.number %></td>
    </tr>
    <tr>
    <td width="100", class="info">Classroom</td> <td><%= @rental.User.class_rooom %></td>
    </tr>
    <tr>
    <td width="100", class="info">Student ID</td> <td><%= @rental.User.studeniid %></td>
    </tr>
    <tr>
    <td width="100", class="info">Description</td> <td><%= @rental.rental_date %></td>
    </tr>
    <tr>
    <td width="100", class="info">Quantity</td> <td><%= @rental.due_date %></td>
    </tr>
    <% end %>
    <tr>
      <td width="100", class="info">Labwares</td>
      <td>
        <table>
          <thead>
            <tr>
              <th>name</th>
              <th>quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @rental.rental_details.each do |i| %>
            <tr>
              <td><%= i.labware.name %></td>
              <td><%= i.quantity %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </td>
    </tr>
    <tr>
    <td width="100", class="info">Status</td> 
    <td>
      <%= render 'status_view', data: @rental.status %>
    </td>
    </tr>
  </tbody>
</table>